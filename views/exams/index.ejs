<section class="content exam-ex-container">
  <h2><%= exam.unitHeading %></h2>
  <%- include('./_exerciseHeader.ejs') %>
  <form id="<%= exam.formId %>" action="<%= exam.formRedirect %>" method="post">
    <div class="exam-container">
      <div class="<%= exam.exerciseOne.exerciseContainerClass %>">
        <h3><%= exam.exerciseOne.exerciseHeading %></h3>
        <% for (const e of exam.exerciseOne.questions) { %>
        <div>
          <label for="<%= e.selectId %>" class="exercise"><%= e.label %></label>
          <select name="<%= e.selectName %>" id="<%= e.selectId %>">
            <option selected disabled value=""></option>
            <option value="T">T</option>
            <option value="F">F</option>
          </select>
        </div>
        <% } %>
      </div>
      <div class="<%= exam.exerciseTwo.exerciseContainerClass %>">
        <h3><%= exam.exerciseTwo.exerciseHeading %></h3>
        <% for (const e of exam.exerciseTwo.questions) { %>
        <div>
          <p class="exercise"><%= e.pDescription %></p>
          <div>
            <% for (const o of e.checkBoxOptions) { %>
            <div>
              <label for="<%= o.optionId %>"><%= o.label %></label>
              <input
                id="<%= o.optionId %>"
                type="checkbox"
                name="<%= o.optionName %>"
                value="<%= o.optionName %>"
              />
            </div>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
      <div class="<%= exam.exerciseThree.exerciseContainerClass %>">
        <h3><%= exam.exerciseThree.exerciseHeading %></h3>
        <% for (const e of exam.exerciseThree.questions) { %>
        <div>
          <div>
            <label for="<%= e.selectId %>" class="exercise"
              ><%= e.label %></label
            >
            <select name="<%= e.selectName %>" id="<%= e.selectId %>">
              <option selected disabled value=""></option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
            </select>
          </div>
          <div><%= e.answerInRow %></div>
        </div>
        <% } %>
      </div>
    </div>
  </form>
</section>
<button
  class="submit-exam"
  type="submit"
  form="<%= exam.formId %>"
  id="submit-exam-btn"
>
  Παρέδωσέ το!
</button>
